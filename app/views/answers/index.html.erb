<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Poll</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.name %></td>
        <td><%= link_to 'Show', [@poll, answer] %></td>
        <td><%= link_to 'Edit', edit_poll_answer_path(@poll, answer) %></td>
        <td><%= link_to 'Destroy', [@poll, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_poll_answer_path(@poll) %>
